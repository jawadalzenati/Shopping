<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="rtl"
    tools:context=".SingInActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="مرحبا بكم في "
        android:textColor="@color/gry"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/gry"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <TextView
        android:id="@+id/tvSinginMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/selectSignInMethod"
        android:textColor="@color/gry"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFaceBook"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginTop="60dp"
        android:background="@drawable/edit_text_shape_with_edg"
        android:backgroundTint="#4267b2"
        android:padding="@dimen/dp5"
        android:text="@string/facbook"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSinginMethod" />

    <Button
        android:id="@+id/btnUseGmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape_with_edg"
        android:backgroundTint="#EF5A4F"
        android:padding="@dimen/dp5"
        android:text="تسجيل الدخول بواسطة جيميل"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnFaceBook"
        app:layout_constraintTop_toBottomOf="@+id/btnFaceBook" />

    <Button
        android:id="@+id/btn_twitter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape_with_edg"
        android:backgroundTint="#7395DC"
        android:padding="@dimen/dp5"
        android:text="تسجيل الدخول بواسطة تويتر"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnUseGmail"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnUseGmail"
        app:layout_constraintTop_toBottomOf="@+id/btnUseGmail" />

    <TextView
        android:id="@+id/tvCompleteWithOutSign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape_with_edg"
        android:gravity="center"
        android:text="@string/completeWithOutSign"
        android:textColor="@color/gry"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_twitter"
        app:layout_constraintTop_toBottomOf="@+id/btn_twitter" />


    <Button
        android:id="@+id/btnUsePhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape_with_edg"
        android:backgroundTint="#4267b2"
        android:padding="@dimen/dp5"
        android:text="تسجيل دخول بواسطة رقم الجوال"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvCompleteWithOutSign"
        app:layout_constraintStart_toStartOf="@+id/tvCompleteWithOutSign"
        app:layout_constraintTop_toBottomOf="@+id/tvCompleteWithOutSign" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp180"
        android:src="@drawable/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>